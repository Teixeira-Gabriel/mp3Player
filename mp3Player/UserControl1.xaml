<UserControl x:Class="mp3Player.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mp3Player"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400">
    <Border BorderThickness="3" Background="Aquamarine">
        <StackPanel Orientation="Vertical">
            <MediaElement x:Name="MediaElement" Height="235" Width="252"/>
            
            <Slider Width="166" Height="24" RenderTransformOrigin="0.616,0.431" ValueChanged="Slider_ValueChanged"/>
            <Button x:Name="PlayButton" Content="Play" Width="78" Click="PlayButton_Click"/>
            <Button x:Name="PauseButton" Content="Pause" Width="78" Click="PauseButton_Click"/>

        </StackPanel>
    </Border>
</UserControl>
